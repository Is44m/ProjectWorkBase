                    <form class="form-horizontal" action="/adminhome/createproject/add" method="POST">
                        <legend><center><font style="font-family:Arial, Helvetica, sans-serif; color: black; font-size: 36px;">Create Project</font></center></legend><hr>
  
                        <label htmlFor="project-name" class="inputbar">Project Name:</label>
                        <input type="text" id="project-name" name="project_name" placeholder="Enter Project Name" required />
  
                        <label htmlFor="lead-id" class="inputbar">Lead ID:</label>
                        <input type="text" id="lead-id" name="lead_id" placeholder="Enter Lead ID" required /><br>
  
                        <label htmlFor="version-name" class="inputbar">Version Name:</label>
                        <input type="text" id="version-name" name="version_name" placeholder="Enter Version Name" required>

                        <label htmlFor="release" class="inputbar">Release:</label>
                        <input type="text" id="release" name="release" placeholder="Enter Version Release" required><br><br>

  
                        <label htmlFor="project-description" class="desbar">Project Description:</label><br />
                        <div class="des"><textarea class="my-textarea" id="notes" name="notes" placeholder="Enter Project Description" ></textarea></div>
  
                        <label htmlFor="project-avatar" class="inputbar">Project Avatar:</label>
                        <input type="text" id="project-avatar" name="project_avatar" placeholder="Enter Image Link" required>
  
                        <label for="status" class="inputbar">Status:</label>
                        <select id="status" name="status" class="drop" required>
                          <option value="">Select Status</option>
                          <option value="1">Yet to Start</option>
                          <option value="2">In Progress</option>
                          <option value="3">Completed</option>
                        </select><br>
  
                        <label htmlFor="start-date" class="inputbar">Start Date:</label>
                        <input type="date" id="start-date" name="start_date" required>
  
                        <label htmlFor="end-date" class="inputbar">End Date:</label>
                        <input type="date" id="end-date" name="end_date" required /><br><br>

                        <div class="werk">Workflow Details:</div>

                        <label htmlFor="element_name" class="inputbar">Element Name:</label>
                        <input type="text" id="element_name" name="element_name" placeholder="Enter Element Name" required>

                        <label for="order" class="inputbar">Order No:</label>
                        <select id="order" name="order" class="drop" required>
                          <option value="">Select Order Number</option>
                          <option value="1">1</option>
                          <option value="2">2</option>
                          <option value="3">3</option>
                          <option value="4">4</option>
                        </select><br><br>
            
                        <center><button type="submit" class="btn button4 btn-default"><font style="color: white;">Create Project</button>
                                                 
                          <a href="./"><button type="button" class="btn button4 btn-default">Return</font></button></a>
                        </center>
            
                      </form>

        }

      input[type=text], select {
        width: 180px;
          margin: 8px 0;
          display: inline-block;
          border: 1px solid #ccc;
          border-radius: 4px;
          box-sizing: border-box;
        }

      .my-textarea {
          width: 100%;
          height: 75px;
          padding: 12px 20px;
          margin: 8px 0;
          display: inline-block;
          border: 1px solid #ccc;
          border-radius: 4px;
          box-sizing: border-box;
        }

      input[type=file], select {
          margin: 8px 0;
          display: inline-block;

          <div class="row">
            <div class="col-2">
              <nav class="navbar navbar-expand-lg navbar-light">
                <ul class="navbar-nav flex-column justify-content-start">
                    <li class="nav-item">
                      <a class="nav-link" href="./"><font style="color: black;">User Management</font></a>
                    </li><br>
                    <li class="nav-item">
                      <a class="nav-link" href="./createproject"><font style="color: black;">Create Project</a></font>
                    </li><br>
                    <li class="nav-item selected">
                      <a class="nav-link" href="./workflow"><font style="color: black;">Workflow</a></font>
                    </li>
                  </ul>
              </nav>
            </div>
            <div class="col-10 mov" id="myDiv">
              <br><br>
              <p style="font-size: 36px; font-family:Arial, Helvetica, sans-serif; color: white; ">Workflow</p><br>

              <table>
                <tr>
                    <th>Project ID</th>
                    <th>Project Name</th>
                    <th>Lead ID</th>
                    <th>Project Description</th>
                    <th>Project Status</th>
                </tr>
                    <%
                  if(allprojslist.length > 0)
                  {
                    allprojslist.forEach(function(allprojslist){
                  %>
                  <tr>
                      <td><%= allprojslist.Project_ID %></td>
                      <td><%= allprojslist.Project_Name%></td>
                      <td><%= allprojslist.Lead_ID %></td>
                      <td><%= allprojslist.Project_Description %></td>
                      <td><%= allprojslist.Status%></td>
                    <td>
                      <button type="button" class="btn btn-link b_shadow">Edit Workflow</button>
                    </td></tr>
                    <%
                });
            }
            else{%>
            <tr>
                <td>No Data Found!</td>
            </tr>
            <%}%>
                
  
            </table><br>
              <br><br><br><br><br><br><br><br><br>

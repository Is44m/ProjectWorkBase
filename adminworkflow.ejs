        #myDiv2 {
          background-color: #f8f9fa;
        }
      .profile {
          position: relative;
          display: inline-block;
          cursor: pointer;
        }
      .profile img {
          border-radius: 50%;
          border: 2px solid #333333;
          box-shadow: 0 2px 5px rgba(0, 0, 0, 0.2);;
          border-color: silver;
          border-width: 1px;
        }

      .dropdown-content {
          display: none;
          position: absolute;
          background-color: #2da5ba;
          box-shadow: 0 2px 5px rgba(0, 0, 0, 0.2);
          border-radius: 4px;
          min-width: 250px;
          padding: 10px;
          border: 1px solid silver;
          z-index: 1;
          top: 90%;
          right: 20%;
          color: white;
          font-family: 'Times New Roman', Times, serif;
        }

      .profile:hover .dropdown-content {
          display: block;
        }

      .navbar {
          position: absolute;
          width: 180px;

      }


      .justify-content-start{
          margin-top: 30px;
          margin-bottom: 400px;
        }

        .b_shadow{
          background-color: white;
          box-shadow: 0 2px 5px rgba(0, 0, 0, 0.2);
          width: 150px;
          color: black;
        }

      .b_shadow:hover {
          background-color: transparent;
        }
      .selected{
          box-shadow: 0 2px 5px rgba(0, 0, 0, 0.2);
        }
        .footer{
          color:  #27A1B7;
      }
      table {
            border-collapse: collapse;
            width: 100%;
            color: white;
        }
        
        th, td {
            padding: 8px;
            text-align: left;
            /* border-bottom: 1px solid #ddd; */
